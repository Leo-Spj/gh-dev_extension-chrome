{
    "manifest_version": 3,
    "name": "Open in GitHub.dev",
    "version": "1.0",
    "description": "Allows you to open a GitHub repository on GitHub.dev",
    "icons": {
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
          "matches": ["https://github.com/*"],
          "js": ["contentScript.js"],
          "css": ["contentStyle.css"]
        }
    ]
  }